<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Users page</title>
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        .user-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            font-family: "Times New Roman";
            font-size: 17px;
        }

        .user-card {
            border: 4px solid #ad9375;
            background-color: #fcf7f0;
            width: 190px;
            border-radius: 15px;
            padding: 20px 10px 20px 20px;
            margin: 20px;
            transition:scale 200ms;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
            position: relative;
            z-index: 0;
        }

        .user-card:hover{
            scale: 1.1;
            z-index: 1;
        }

        form {
            float: left;
            margin-right: 10px;

        }
        .input1{
            border:2px solid #ad9375;
            border-radius: 10px;
            background-color: #ad9375;
            transition: ease-in-out 200ms;
            font-size: 15px;
        }
        input:hover {
            background-color: white;
            color:#ad9375 ;

        }
        nav{
            overflow: hidden;
            display: flex;
            background: #212020;
            padding-top: 30px;
            padding-bottom: 30px;
            padding-right: 50px;
            position: relative;
            z-index: 2;

        }

        a{
            color: #9f9f9f;
            text-decoration: none;
            font-size: 23px;
            font-family: "Times New Roman";
            margin-right:20px;
        }
        a:hover{
            color: white;
        }

        .content {
            padding: 16px;
        }

        .sticky {
            position: fixed;
            top: 0;
            width: 96%;


        }

        .sticky + .content {
            padding-top: 60px;
        }
        .project-title {
            color: #f8f6f2;
            font-size: 25px;
            font-family: "Times New Roman";
            margin-left: 50px;
        }
        .links{
            margin-left: auto;
        }
        img{
            margin-right: 30px;
            width: 180px;
            height: 160px;

        }
    </style>
</head>
<body style="background: #f8f6f2">
<nav>
    <div class="project-title">Node.js Project</div>
    <div class="links">
    <a href="/">Home</a>
    <a href="/users">Users</a>
    <a href="/users/new">Create new user</a>
    </div>
</nav>
<div class="content">
<div class="user-container">
    <% for(let i=0; i<users.length; i++){ %>

        <div class="user-card">
            <img src="<%= users[users.length-1-i].icon%>" alt="User Picture">
            <p>Name: <%= users[users.length-1-i].name%></p>
            <p>Surname: <%= users[users.length-1-i].surname%></p>
            <p>Age: <%= users[users.length-1-i].age%></p>
            <form action="/users/<%=users[users.length-1-i].id%>/delete" method="post" >
                <input   class="input1" type="submit" value="Delete user">
            </form>
            <form action="/users/<%=users[users.length-1-i].id%>/edit" method="get">
                <input class="input1" type="submit" value="Edit user">
            </form>

        </div>

    <% } %>
</div>
</div>

<br>
<script>
    const navbar = document.querySelector('nav');

    function stickynavbar() {
        const rect = navbar.getBoundingClientRect();
        let top = rect.top + window.scrollY;

        if (window.scrollY >= top) {
            navbar.classList.add('sticky');
            document.body.style.marginTop = navbar.offsetHeight + 'px';
        } else {
            navbar.classList.remove('sticky');
            document.body.style.marginTop = '0';
        }
    }

    window.addEventListener('scroll', stickynavbar);
</script>

</body>
</html>
